<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="450dp"
    android:layout_gravity="center"
    android:gravity="top"
    android:background="#30bebebe"

    android:weightSum="1"
    tools:context="com.example.nadav.javaproject5777.controller.AddUser">
    <!--android:alpha="0.4"-->



    <TextView
        android:text="Create Account"
        android:layout_gravity="top"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="40dp"
        android:id="@+id/textView_Account"
         />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:alpha="0.4"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_account_circle_black_24dp"
        android:id="@+id/imageView" />


    <EditText
        android:id="@+id/editText_addUser"
        android:hint="@string/username"
        android:layout_marginTop="40dp"
        style="@style/MyEditTextStyle"

        />

    <EditText
        android:hint="@string/password"
        android:inputType="textPassword"
        android:layout_marginTop="15dp"
        style="@style/MyEditTextStyle"

        android:id="@+id/editText_addPassword" />

    <EditText
        android:hint="@string/confirm_psd"
        android:inputType="textPassword"
        android:layout_marginTop="15dp"
        style="@style/MyEditTextStyle"

        android:id="@+id/editText_confirmPassword" />

    <Button
        android:text="@string/newUser"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_addUser"
        android:background="@drawable/button_rounded"
        android:textColor="#ffffff"
         />
</LinearLayout>