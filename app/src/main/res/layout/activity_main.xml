<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/summer"
    tools:context="com.example.nadav.javaproject5777.controller.MainActivity">


    <TextView
        android:text="Welcome"
        android:textColor="@android:color/white"
        android:textSize="40dp"
        android:ellipsize="end"
        android:lines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:id="@+id/textViewWelcome" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/layout_rounded"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="160dp">

        <Button
            android:text="@string/add_business"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:background="@drawable/button_rounded2"
            android:fontFamily="casual"
            android:textSize="18sp"
            android:textStyle="normal|bold|italic"
            android:id="@+id/AddBusiness_button"/>

        <Button
            android:text="@string/add_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_rounded2"
            android:fontFamily="casual"
            android:textSize="18sp"
            android:textStyle="normal|bold|italic"
            android:id="@+id/AddActivity_button"
             />
    </LinearLayout>

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        android:background="@color/colorPrimary"
        android:id="@+id/logout1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
        <Button

            android:text="Logout"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="#ffffff"
            android:background="@drawable/boutton_logout"

            android:id="@+id/logout" /></RelativeLayout>

    </android.support.v7.widget.Toolbar>


</RelativeLayout>
