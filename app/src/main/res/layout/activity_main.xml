<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nadav.javaproject5777.controller.MainActivity">

    <Button
        android:text="Add activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AddActivity_button"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/AddBusiness"
        android:layout_alignStart="@+id/AddBusiness"
        android:layout_marginBottom="67dp" />

    <Button
        android:text="see list of activities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:id="@+id/buttonList"
        android:layout_above="@+id/AddActivity_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Add business"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AddBusiness"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/buttonList"
        android:layout_alignEnd="@+id/buttonList"
        android:layout_marginRight="69dp"
        android:layout_marginEnd="69dp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:text="enter the id:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="id"
        android:id="@+id/editTextID"
       />

    <Button
        android:text="go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/buttonGO"
        /></LinearLayout>
</RelativeLayout>
