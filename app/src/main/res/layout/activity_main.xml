<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/summer"
    tools:context="com.example.nadav.javaproject5777.controller.MainActivity">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:text="enter the id:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="id"
        android:id="@+id/editTextID"
       />

    <Button
        android:text="go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/buttonGO"
        />

    <Button
        android:text="Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/AddActivity_button"
        android:layout_alignLeft="@+id/buttonList"
        android:layout_alignStart="@+id/buttonList"
        android:id="@+id/logout"
        android:layout_weight="1" />
</LinearLayout>

    <TextView
        android:text="Welcome"
        android:textColor="@android:color/white"
        android:textSize="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:id="@+id/textViewWelcome" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@drawable/layout_rounded"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="140dp">

        <Button
            android:text="@string/add_business"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:background="@drawable/button_rounded2"
            android:fontFamily="casual"
            android:textSize="18sp"
            android:textStyle="normal|bold|italic"
            android:id="@+id/AddBusiness_button"/>

        <Button
            android:text="@string/add_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_rounded2"
            android:fontFamily="casual"
            android:textSize="18sp"
            android:textStyle="normal|bold|italic"
            android:id="@+id/AddActivity_button"
             />
    </LinearLayout>




</RelativeLayout>
