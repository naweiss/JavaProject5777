<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/blue"

    tools:context="com.example.nadav.javaproject5777.controller.Login"
    android:weightSum="1">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo"
            android:layout_marginTop="20dp"
            android:layout_weight="0.63"
            android:contentDescription="@string/image_containt_description"/>

        <EditText
            android:id="@+id/username"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:alpha="0.7"
            android:drawableLeft="@drawable/ic_perm_identity_white_24dp"
            android:drawableStart="@drawable/ic_perm_identity_white_24dp"
            android:drawablePadding="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:inputType="textImeMultiLine"
            android:layout_gravity="center"
            android:hint="@string/username"
            android:backgroundTint="#ffffff"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff" />

        <EditText
            android:id="@+id/password"
            android:layout_width="fill_parent"
            android:textColor="@android:color/white"
            android:layout_height="60dp"
            android:drawableLeft="@drawable/ic_lock_outline_white_24dp"
            android:drawableStart="@drawable/ic_lock_outline_white_24dp"
            android:drawablePadding="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:alpha="0.5"
            android:backgroundTint="#ffffff"
            android:inputType="textPassword"
            android:textColorHint="#ffffff"
            android:hint="@string/password"
             />

        <CheckBox
            android:id="@+id/remember"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:text="@string/remember"
            android:checked="false"
            android:alpha="0.6"
            android:focusable="false"
            android:textColor="@color/colorAccent"
            android:buttonTint="@color/colorAccent"
            />

        <Button
            android:id="@+id/connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:text="@string/connect"
            android:textColor="@android:color/white"
            android:background="@drawable/button_rounded"

             />

        <TextView
            android:id="@+id/textView"
            android:text="@string/text_view_add"
            android:layout_width="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content"
            android:textSize="12sp" />


        <Button
            android:id="@+id/newUser"
            android:text="@string/newUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            style="@style/Widget.AppCompat.Button.Borderless.Colored" />


</LinearLayout>

